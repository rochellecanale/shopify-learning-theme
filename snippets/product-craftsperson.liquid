{%- comment -%}
	Renders the craftsperson section

	Accepts:
	- product { Object } the product object with the craftsperson metafield

	Usage:
	% render 'product-craftsperson', { product: product} %}
{%- endcomment -%}

{% if product.metafields.custom.craftsperson.value.name %}
	<div class="page-width">
		<h2>Meet the craftsperson: {{ product.metafields.custom.craftsperson.value.name }}</h2>
		{{ product.metafields.custom.craftsperson.value.image | image_url: width: 250, height: 250 | image_tag }}
		<div>
			{{ product.metafields.custom.craftsperson.value.bio | metafield_tag }}
		</div>

		<a href="{{ product.metafields.custom.craftsperson.value.system.url }}">Visit craftperson's page</a>
	</div>
{% endif %}